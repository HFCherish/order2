<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="records">
    <resultMap id="userId" type="com.thoughtworks.order.domain.user.UserId">
        <constructor>
            <idArg column="userId" javaType="string"/>
        </constructor>
    </resultMap>

    <resultMap id="user" type="com.thoughtworks.order.domain.user.User">
        <result property="name" column="userName"/>
        <result property="email" column="userEmail"/>
        <result property="role" column="userRole"/>
        <result property="password" column="userPassword"/>
        <association property="userId" resultMap="userId"/>
    </resultMap>

    <resultMap id="product" type="com.thoughtworks.order.domain.Product">
        <id property="id" column="prodId"/>
        <result property="name" column="prodName"/>
        <result property="description" column="prodDescription"/>
        <result property="price" column="prodPrice"/>
    </resultMap>
</mapper>
